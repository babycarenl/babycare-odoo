<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="PickingEditorWidget">
        <t t-jquery="table.js_op_table_todo" t-operation="before">
            <div id="address" class="col-md-3 col-sm-4 col-xs-6 preformatted"
                 />
            <div id="pickinfo" class="col-md-3 col-sm-4 col-xs-6">
                <table style="width: 100%">
                    <tr>
                        <th>Carrier</th>
                        <td id="info_carrier"><span t-esc="widget.get_carrier()" /></td>
                    </tr>
                    <tr>
                        <th>Carrier tracking ref</th>
                        <td id="info_carrier_ref"><span t-esc="widget.get_carrier_ref()" /></td>
                    </tr>
                </table>
            </div>
        </t>
    </t>
</templates>
