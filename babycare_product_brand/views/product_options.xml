<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_options_form" model="ir.ui.view">
            <field name="name">product_options - ProductOptions Form</field>
            <field name="model">product.options</field>
            <field name="arch" type="xml">
                <form string="Product Options">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="attributeset_id" options="{'no_create': True}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_product_options_tree" model="ir.ui.view">
            <field name="name">product_options - ProductOptions Tree</field>
            <field name="model">product.options</field>
            <field name="arch" type="xml">
                <tree string="product.options">
                    <field name="name" />
                    <field name="attributeset_id" />
                </tree>
            </field>
        </record>

        <record id="action_product_attributemanager_product_options" model="ir.actions.act_window">
            <field name="name">Options</field>
            <field name="res_model">product.options</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new option.
                </p>
                <p>
                    You must define an option before you can add an option to a product.
                </p>
            </field>
        </record>

        <record id="view_product_attributemanager_form_product_options_inherited" model="ir.ui.view">
            <field name="name">Product Attribute Manager - Options Add-on</field>
            <field name="model">product.attributemanager</field>
            <field name="inherit_id" ref="babycare_product_brand.view_product_attributemanager_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='attributemanager_default']/label[@string='Default']" position="after">
                    <label string="Options" />
                    <div>
                        <button type="action" name="%(action_product_attributemanager_product_options)d" string="Create" icon="gtk-go-forward" class="oe_highlight" />
                        <button type="object" name="action_call_magento_sync_all_options" icon="gtk-go-forward" string="Sync" class="oe_highlight" />
                    </div><newline/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>