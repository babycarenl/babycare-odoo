<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_buggies_numberofwheels_form" model="ir.ui.view">
            <field name="name">product_buggies_numberofwheels - ProductBuggiesNumberOfWheels Form</field>
            <field name="model">product.buggies.numberofwheels</field>
            <field name="arch" type="xml">
                <form string="Product Buggies Number Of Wheels">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_product_buggies_numberofwheels_tree" model="ir.ui.view">
            <field name="name">product_buggies_numberofwheels - ProductBuggiesNumberOfWheels Tree</field>
            <field name="model">product.buggies.numberofwheels</field>
            <field name="arch" type="xml">
                <tree string="product.buggies.numberofwheels">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="action_product_attributemanager_product_buggies_numberofwheels" model="ir.actions.act_window">
            <field name="name">Buggies Number Of Wheels</field>
            <field name="res_model">product.buggies.numberofwheels</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new record.
                </p>
                <p>
                    You must define a record before you can add the record to a product.
                </p>
            </field>
        </record>

        <record id="view_product_attributemanager_form_product_buggies_numberofwheels_inherited" model="ir.ui.view">
            <field name="name">Product Attribute Manager - Buggies NumberOfWheels Add-on</field>
            <field name="model">product.attributemanager</field>
            <field name="inherit_id" ref="babycare_product_brand.view_product_attributemanager_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='attributemanager_buggies']/label[@string='Buggies']" position="after">
                    <label string="Number of Wheels" />
                    <div>
                        <button type="action" name="%(action_product_attributemanager_product_buggies_numberofwheels)d" string="Create" icon="gtk-go-forward" class="oe_highlight" />
                        <button type="object" name="action_call_magento_sync_all_buggies_numberofwheels" icon="gtk-go-forward" string="Sync" class="oe_highlight" />
                    </div><newline/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>