<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_attributeset_form" model="ir.ui.view">
            <field name="name">product_attributeset - ProductAttributeset Form</field>
            <field name="model">product.attributeset</field>
            <field name="arch" type="xml">
                <form string="Product Attribute Set">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_product_attributeset_tree" model="ir.ui.view">
            <field name="name">product_attributeset - ProductAttributeset Tree</field>
            <field name="model">product.attributeset</field>
            <field name="arch" type="xml">
                <tree string="product.attributeset">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="action_product_attributeset" model="ir.actions.act_window">
            <field name="name">Attribute Sets</field>
            <field name="res_model">product.attributeset</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new attribute set.
                </p>
                <p>
                    You must define an attribute set before you can add an option.
                </p>
            </field>
        </record>

        <menuitem
            id="menu_product_attributeset"
            name="Product Attribute Set"
            action="action_product_attributeset"
            parent="menu_product_attribute_manager"
            sequence="999" />
    </data>
</openerp>