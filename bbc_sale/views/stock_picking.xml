<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- NB field sale_id comes from sale_stock but is not added to the view -->
        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">Add remarks to picking form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="remarks" />
                </field>
                <field name="priority" position="after">
                    <field name="sale_id" attrs="{'invisible': [('sale_id', '=', False)]}" />
                    <field name="purchase_id" attrs="{'invisible': [('purchase_id', '=', False)]}" />
                </field>
            </field>
        </record>

        <record id="vpicktree" model="ir.ui.view">
            <field name="name">Add remarks to picking form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree" />
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="remarks" />
                </field>
            </field>
        </record>


    </data>
</openerp>
