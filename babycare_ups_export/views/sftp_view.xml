<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_ups_sftp_conf_form">
            <field name="name">Configure UPS sFTP</field>
            <field name="model">ups.sftp</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Configure UPS SFTP">
                    <group col="4" colspan="4">
                        <separator col="2" string="UPS SFTP configuration"/>
                    </group>
                    <group>
                        <field name="export_type"/>
                        <field name="export_extension"/>
                        <field name="sftp_host"/>
                        <field name="sftp_port"/>
                        <field name="sftp_user"/>
                        <field name="sftp_password" password="True"/>
                        <field name="sftp_path" placeholder="For example: /sftpuser/ups-import/"/>
                        <button name="test_sftp_connection" type="object" string="Test SFTP Connection" icon="gtk-network"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_ups_sftp_conf_tree">
            <field name="name">Configure UPS sFTP</field>
            <field name="model">ups.sftp</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Configure UPS SFTP">
                    <field name="export_type"/>
                    <field name="sftp_user"/>
                    <field name="sftp_host"/>
                    <field name="sftp_path"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ups_sftp_conf_form">
            <field name="name">Configure UPS sFTP</field>
            <field name="res_model">ups.sftp</field>
            <field name="view_type">form</field>
            <field name='view_mode'>tree,form</field>
            <field name='view_id' ref='view_ups_sftp_conf_tree'/>
        </record>

        <menuitem id="ups_sftp_menu" name="UPS sFTP" parent="base.menu_custom" sequence="0"/>
        <menuitem parent="ups_sftp_menu" action="action_ups_sftp_conf_form" id="ups_sftp_conf_menu"/>

    </data>
</openerp>